				session.getBasicRemote().sendObject(getIdoFeedbacks12);	             
			} 
			
		}
	}
	
	
	
	public void sendMessage() throws IOException{
        //群发消息
        for(WebSocketController item: webSocketSet){
            try {
                item.session.getBasicRemote().sendText("3");
            } catch (IOException e) {
                e.printStackTrace();
                continue;
            }
        }

    }
	
	
	
	
	
	
	
	
